<div class="container">
  <h2>ğŸ–¼ï¸ <%= h(@item[:name]) %></h2>

  <div class="art-detail">
    <!-- Image Section -->
    <div class="art-image">
      <% if @item[:image] && !@item[:image].empty? %>
        <img src="/<%= @item[:image] %>" alt="<%= h(@item[:name]) %>" class="art-image-main">
      <% else %>
        <div class="placeholder">ğŸ¨ No image available</div>
      <% end %>
    </div>

    <!-- Information Section -->
    <div class="art-info">
      <p><strong>Price:</strong> $<%= sprintf('%.2f', @item[:price].to_f) %></p>
      <p><strong>Status:</strong>
        <span class="<%= @item[:sold].to_s == 'true' ? 'status-sold' : 'status-available' %>">
          <%= format_sold(@item) %>
        </span>
      </p>
      <p><strong>Sold Where:</strong>
        <%= @item[:sold_where].to_s.strip.empty? ? 'â€”' : h(@item[:sold_where]) %>
      </p>

      <% if @item[:qr_code] && !@item[:qr_code].empty? %>
        <p><strong>QR Code:</strong></p>
        <img src="/<%= @item[:qr_code] %>" alt="QR Code for <%= h(@item[:name]) %>" class="qr-thumb-large">
      <% end %>

      <div class="art-actions">
        <a href="/items/<%= @item[:id] %>/edit" class="button">âœï¸ Edit</a>
        <a href="/" class="button secondary">â† Back to List</a>
      </div>
    </div>
  </div>
</div>
