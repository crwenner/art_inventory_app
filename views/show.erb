<h1><%= @item[:name] %></h1>

<div class="art-detail">
  <div class="art-image">
    <% if @item[:image] && !@item[:image].empty? %>
      <img src="/<%= @item[:image] %>" alt="<%= @item[:name] %>" width="300">
    <% else %>
      <div class="placeholder">ðŸŽ¨ No image available</div>
    <% end %>
  </div>

  <div class="art-info">
    <p><strong>Sold:</strong> <%= format_sold(@item) %></p>
    <p><strong>Sold Where:</strong>
      <%= @item[:sold_where].nil? || @item[:sold_where].empty? ? 'â€”' : @item[:sold_where] %>
    </p>

    <div class="art-actions">
