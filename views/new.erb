<div class="container">
  <h2>âž• Add New Art Piece</h2>

  <form action="/create" method="post" enctype="multipart/form-data" class="edit-form">
    <!-- Name -->
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" placeholder="Enter artwork name" required>
    </div>

    <!-- Price -->
    <div class="form-group">
      <label for="price">Price ($)</label>
      <input
        type="number"
        id="price"
        name="price"
        step="0.01"
        min="0"
        placeholder="e.g. 45.00"
        required
      >
    </div>

    <!-- Image Upload -->
    <div class="form-group">
      <label for="image">Image</label>
      <input type="file" id="image" name="image" accept="image/*">
      <p class="text-muted">Upload a clear photo of your art piece (optional).</p>
    </div>

    <!-- Form Actions -->
    <div class="form-actions">
      <button type="submit" class="button">ðŸ’¾ Add Item</button>
      <a href="/" class="button secondary">Cancel</a>
    </div>
  </form>
</div>
